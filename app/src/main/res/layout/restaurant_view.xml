<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_restaurant_margin_start"
                android:layout_marginTop="@dimen/view_restaurant_margin_top"
                android:paddingBottom="@dimen/view_restaurant_padding_bottom"
                android:text="@string/restaurant_view_name"
                android:textStyle="bold"
                android:textSize="@dimen/view_restaurant_name_text_size"
                android:singleLine="true"
                android:ellipsize="end"

                />

            <TextView
                android:id="@+id/restaurant_view_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/view_restaurant_padding_bottom"
                android:layout_marginStart="@dimen/view_restaurant_margin_start"
                android:text="@string/restaurant_view_address" />

            <TextView
                android:id="@+id/restaurant_view_opening_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/view_restaurant_padding_bottom"

                android:layout_marginStart="@dimen/view_restaurant_margin_start"
                android:text="@string/restaurant_view_opening_times" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_view_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/view_restaurant_distance_text_size"
                android:paddingBottom="@dimen/view_restaurant_padding_bottom"
                android:layout_marginTop="@dimen/view_restaurant_margin_top"
                android:layout_marginEnd="@dimen/view_restaurant_margin_end"
                android:text="@string/restaurant_view_distance" />

            <TextView
                android:id="@+id/restaurant_view_workmates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/view_restaurant_padding_bottom"
                android:text="@string/restaurant_view_workmates" />

            <TextView
                android:id="@+id/restaurant_view_stars"
                android:text="@string/restaurant_view_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/restaurant_view_picture"
                android:layout_width="@dimen/view_restaurant_picture_width"
                android:layout_height="@dimen/view_restaurant_picture_height"
                android:layout_marginEnd="@dimen/view_restaurant_margin_end"
                android:layout_marginTop="@dimen/view_restaurant_margin_top"
                android:layout_marginBottom="@dimen/view_restaurant_padding_bottom"
                android:background="@drawable/go4lunch_logo"
                android:scaleType="fitXY" />

        </LinearLayout>


    </LinearLayout>




</android.support.design.widget.CoordinatorLayout>