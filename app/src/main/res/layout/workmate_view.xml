<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/workmate_view_picture"
        android:background="@drawable/ic_launcher_background"
        android:layout_width="@dimen/workmate_picture_width"
        android:layout_height="@dimen/workmate_picture_height"
        />

    <TextView
        android:id="@+id/workmate_view_text"
        android:text="@string/workmate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/workmate_text_size"
        />

</LinearLayout>