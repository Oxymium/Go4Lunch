<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4">

    <ImageView
        android:id="@+id/workmate_view_picture"
        android:layout_weight="1"
        android:layout_width="@dimen/workmate_picture_width"
        android:layout_height="@dimen/workmate_picture_height"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_shape" />


    <TextView
        android:id="@+id/workmate_view_text"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="30dp"
        android:text="@string/workmate_text"
        android:textSize="@dimen/workmate_text_size" />

</LinearLayout>