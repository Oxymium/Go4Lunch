<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_weight="30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/workmate_view_picture"
            android:layout_width="@dimen/view_restaurant_picture_width"
            android:layout_height="@dimen/workmate_picture_height"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:background="@color/fui_transparent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="80"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/workmate_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:paddingEnd="5dp"
            android:text="@string/workmate_view_undecided"
            android:textSize="@dimen/workmate_text_size"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            />

    </LinearLayout>

</LinearLayout>