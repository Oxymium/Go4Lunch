<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/workmate_view_picture"
        android:layout_width="@dimen/workmate_picture_width"
        android:layout_height="@dimen/workmate_picture_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_launcher_background" />


    <TextView
        android:id="@+id/workmate_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="41dp"
        android:text="@string/workmate_text"
        android:textSize="@dimen/workmate_text_size" />

</RelativeLayout>