<resources>

    <!-- Base application Theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggleStyle</item>
        <item name="buttonStyle">@style/Button.Theme</item>


    </style>

    <!-- Authentication Title Theme. -->
    <style name="AuthenticationTitle.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/g4lWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">70sp</item>
    </style>

    <!-- Authentication Title Theme. -->
    <style name="AuthenticationSubtitle.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/g4lWhite</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>



    <!-- Toolbar Theme. -->
    <style name="Toolbar.Theme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/g4lWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/g4lWhite</item>
    </style>

    <!-- Toolbar's burger Theme. -->
    <style name="MyDrawerArrowToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- NAVIGATION DRAWER THEME. -->
    <style name="NavigationDrawer.Theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/g4lWhite</item>
        <item name="android:textColorSecondary">@color/g4lWhite</item>
        <item name="android:background">@color/g4lOrange</item>
    </style>

    <!-- Authentication button Theme. -->
    <style name="Button.Theme" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlertDialog.Style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/g4lWhite</item>
        <item name="android:textColorPrimary">@color/g4lWhite</item>
        <item name="android:background">@color/g4lOrange</item>
    </style>
</resources>
